<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/item_margin_default"
    android:padding="@dimen/item_margin_default"
    app:strokeColor="@color/c4"
    app:strokeWidth="1dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="@dimen/elevation_default"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtGuest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Name is Aqil"
        android:layout_margin="@dimen/item_margin_small"
        android:textSize="@dimen/text_size_medium"
        android:textAlignment="center"
        android:textColor="@color/black"/>

</androidx.cardview.widget.CardView>